  <% layout("/layouts/boilarplate.ejs") %>
    <h3>All listings</h3>
    <!-- <form method="GET" action="/listings/new">
      <button>Create new</button>
    </form> -->
   <!-- <h4>implemeting bootstrapcard</h4> -->
   <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let listing of allListings){%>
      <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col">
       <img src="<%= listing.image %>" class="card-img-top" alt="listing-img" style="height: 20rem;">
       <div class="card-img-overlay">.</div>
       <div class="card-body"> <br>
        <p class="card-text">
          <strong><%= listing.title %></strong><br><span style="color: grey;"><i class="fa-solid fa-location-dot">&nbsp;</i><%= listing.country %></span>
          <div class="price" style="margin-top: -12px;">&#8377; <%= listing.price.toLocaleString("en-IN") %> /night<br></div>
        </p>
       </div>
     </div>
    </a>
     <%}%> 
   </div>

