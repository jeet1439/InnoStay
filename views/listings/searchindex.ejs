<% layout("/layouts/boilarplate.ejs") %>
<%- include("../includes/filter.ejs") %>
<br>
<% if (messages.length > 0) { %>
    <div class="alert alert-danger">
        <% messages.forEach(message => { %>
            <p><%= message %></p>
        <% }) %>
    </div>
    <script>
      setTimeout(function() {
        window.location.href = "/listings";
      }, 2000);
  </script>
<% } %>
<div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-img" style="height: 20rem;">
                <div class="card-body"> 
                    <p class="card-text">
                        <strong><%= listing.title %></strong><br>
                        <span style="color: grey;"><i class="fa-solid fa-location-dot">&nbsp;</i><%= listing.country %></span>
                        <div class="price" style="margin-top: -12px;">&#8377; <%= listing.price.toLocaleString("en-IN") %> /night<br></div>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>
