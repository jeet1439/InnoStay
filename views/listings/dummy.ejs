  <% layout("/layouts/boilarplate.ejs") %>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Listing details: </h3>
     </div>
    <div class="card col-6 offset-3 show-card">
      <img class="card-img-top show-img" src="<%= listing.image %>" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
           <b><%= listing.title %></b><br>
           <%= listing.description %> <br>
           <%= listing.price.toLocaleString("en-IN") %> <br>
           <%= listing.location %> <br>
           <%= listing.country %> <br>
          </p>
      </div>
    </div>
    <br>
    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn col-1 offset-3 add-btn">Edit </a>
      <form method="post" action="/listings/<%= listing._id %>?_method=Delete">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
    </div>
 <br>
